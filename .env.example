# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
# SLACK_API_URL=https://slack.com/api

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI Vector Store (for knowledge base)
# Multiple stores (comma-separated):
# OPENAI_VECTOR_STORE_IDS=vs_abc123,vs_def456
# Single store:
# OPENAI_VECTOR_STORE_ID=vs_abc123

# Code Interpreter Container ID (optional)
# OPENAI_CODE_CONTAINER_ID=cc_...

# MetricsHub MCP Server (single server mode)
# For multiple servers, use ai/mcp.config.local.js instead
# MCP_AGENT_URL=https://metricshub.example.com/sse
# MCP_AGENT_TOKEN=your-mcp-token

# Prometheus (optional)
# M8B_PROMETHEUS_URL=http://prometheus.example.com:9090

# Environment
NODE_ENV=development
