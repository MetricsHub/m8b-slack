{
	"name": "m8b-slackbot",
	"version": "1.0.0",
	"description": "M8B - A grumpy but competent AI system administrator Slack bot",
	"type": "module",
	"main": "app.js",
	"scripts": {
		"start": "node app.js",
		"dev": "node --watch app.js",
		"check": "npx tsc --checkJs --noEmit --esModuleInterop --target esnext --module nodenext --moduleResolution nodenext app.js",
		"lint": "npx @biomejs/biome check app.js ai/ listeners/",
		"lint:fix": "npx @biomejs/biome check --write app.js ai/ listeners/",
		"format": "npx prettier --write .",
		"format:check": "npx prettier --check .",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"validate": "npm run format:check && npm run lint && npm run test"
	},
	"author": "MetricsHub",
	"license": "MIT",
	"keywords": [
		"slack",
		"bolt",
		"slackapi",
		"openai",
		"ai",
		"chatbot",
		"metricshub"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/MetricsHub/m8b-slack.git"
	},
	"bugs": {
		"url": "https://github.com/MetricsHub/m8b-slack/issues"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {
		"@slack/bolt": "^4.5.0",
		"dotenv": "~17.2.3",
		"mcp-client": "^1.13.1",
		"openai": "^6.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@slack/cli-hooks": "^1.2.1",
		"@types/node": "^24.6.1",
		"jest": "^29.7.0",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3"
	}
}
